# Server
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/ai_interviewer

# Redis (sessions). Omit or set to "memory" to use in-memory store (no Redis needed). Set to redis://host:6379 to use Redis.
# REDIS_URL=memory

# Ollama Configuration (Local LLM). Used when OPENROUTER_API_KEY is not set.
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=500

# Open Router (role-based interviewer). When set, voice and chat use Open Router instead of Ollama.
# Get key: https://openrouter.ai
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini

# AICC API (optional; for TTS or other services)
AICC_API_KEY=

# Whisper Configuration (Local Speech-to-Text)
WHISPER_MODEL=base.en
WHISPER_LANGUAGE=en
WHISPER_DEVICE=cpu

# WebRTC Configuration
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Interview Configuration
INTERVIEW_MAX_DURATION=1800
INTERVIEW_MAX_SILENCE=30
INTERVIEW_MIN_QUESTIONS=5
INTERVIEW_MAX_QUESTIONS=15

# Admin panel (config-based login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Frontend base URL (for join links in admin)
FRONTEND_URL=http://localhost:3000

# Mail settings (for interview schedule emails)
# You can use MAIL_* or SMTP_* names.
# Example (Gmail with app password):
# MAIL_SERVICE=gmail
# MAIL_USER=your-email@gmail.com
# MAIL_PASS=your-app-password
# MAIL_FROM=your-email@gmail.com
# MAIL_REPLY_TO=your-email@gmail.com
#
# Example (custom SMTP host):
# MAIL_HOST=smtp.your-provider.com
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=your-username
# MAIL_PASS=your-password
# MAIL_FROM=no-reply@your-domain.com
